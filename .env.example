# Environment
ENVIRONMENT=development
PORT=8000
DEBUG=false

# Bot Configuration
BOT_AUTO_START=false
ALLOW_BOT_CONTROL=true
REQUIRE_AUTH_FOR_BOT_CONTROL=true

# Scalping Bot
# Enable or disable the scalping bot strategy (default: false for safety)
SCALPING_BOT_ENABLED=false

# Rise/Fall Bot
# Enable or disable the Rise/Fall scalping bot (default: false for safety)
RISE_FALL_BOT_ENABLED=false

# Authentication (Supabase)
# Get these from: Supabase Dashboard -> Project Settings -> API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here
DERIV_API_KEY_ENCRYPTION_SECRET=set_a_long_random_secret_here

# Trading API (Deriv)
DERIV_APP_ID=1089
DERIV_API_TOKEN=your_deriv_api_token_here

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Security
# ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_ENABLED=true

# Redis Cache (Optional - Enable for caching)
# If using Railway Redis, these will be auto-provided if linked, or use REDIS_URL
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
# REDIS_ENABLED=true
